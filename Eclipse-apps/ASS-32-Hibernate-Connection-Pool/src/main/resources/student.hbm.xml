<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
  	
 <!-- Specifies mapping between entity class and database table  -->   
 	<class name="com.tca.entities.Student" table="student">
 		
 		<!-- Mapping fields with columns -->
 		
 		<!-- id => Primary Key  -->		
 		<id name="rno" column="RNO"></id>
 		<property name="name" column="Name"></property>
 		<property name="per" column="PER"></property>
 	</class>
 
 </hibernate-mapping>