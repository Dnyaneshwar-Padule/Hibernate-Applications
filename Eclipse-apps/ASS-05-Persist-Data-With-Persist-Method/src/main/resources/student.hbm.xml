<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
 <hibernate-mapping>
 
 	<!-- Mapping of entity class with database table  -->
 	<class name="com.tca.entities.Student" table="student">
 	
 		<!-- Mapping of fields with columns -->
 		<id name="rno" column="RNO"></id> <!-- Primary Key -->
 		<property name="name" column="NAME"></property>
 		<property name="per" column="PER"></property>
 		
 	</class>
 
 </hibernate-mapping>